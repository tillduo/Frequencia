<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.tillduo.frequencia">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE.autofocus" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:appCategory="social">

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".LoginActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".CameraActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".ConfiguracaoActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".GruposActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".ContatosActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".DuvidasActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".RegistroMensalActivity"></activity>

        <activity android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:name=".NotificacaoActivity"></activity>

        <activity android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"
                  android:name=".MainActivity">
        </activity>

        <activity
                android:name=".CadastroActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>