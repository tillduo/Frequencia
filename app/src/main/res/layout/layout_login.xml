<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEmailLogin" android:layout_marginTop="130dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Email"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtSenhaLogin"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmailLogin"
            android:hint="Senha"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp"/>
    <TextView
            android:text="Esqueceu a senha?"
            android:layout_width="129dp"
            android:layout_height="28dp"
            android:id="@+id/lblEsqueceuSenha"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/txtSenhaLogin"
            android:textColor="@color/colorAccent"/>
    <Button
            android:text="Entrar"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogar"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSenhaLogin"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="NÃ£o tem conta?"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/lblIrParaCadastro"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>